{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "plugins": [{ "transform": "ts-optchain/transform" }],
    "baseUrl": ".",
    "paths": {
      "_@/*": ["src/*"],
      "@@/*": ["src/@@/*"],
      "@kik4/abreact": ["src/export"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
