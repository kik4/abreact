{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "plugins": [{ "transform": "ts-optchain/transform" }]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
